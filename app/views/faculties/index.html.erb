<p id="notice"><%= notice %></p>

<h1>Listing Faculties</h1>

<table>
  <thead>
    <tr>
	<th>Name</th>
	<th>Uid</th>
	<th>Email</th> 
  <th>Department</th> 
  <th>Research Area</th>
	<th>About</th>
	<th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <%facultieshash= @faculties.order(name: :asc) %>
    <% facultieshash.each do |faculty| %>
      <tr>
	      <td><%= faculty.name %></td>

        <%if faculty.uid.nil? %>
          <td>No UID</td>
          <%else%>
          <td><%=faculty.uid%>  </td>
        <% end %>

         <%if faculty.email.nil? %>
          <td>No Email</td>
          <%else%>
          <td><%=faculty.email%>  </td>
         <% end %>

         <%if faculty.department.nil? %>
          <td>No Department</td>
          <%else%>
          <td><%=link_to faculty.department.name, faculty.department%>  </td>
        <% end %>

        <td><%= faculty.researcharea_id %> </td>

        <%if faculty.about.nil? %>
          <td>No info.</td>
          <%else%>
          <td><%=faculty.about%>  </td>
        <% end %>  

        <td><%= link_to 'Show', faculty %></td>
         <td> <% if can? :update, faculty%>  </td>
        <td><%= link_to 'Edit', edit_faculty_path(faculty) %></td>
        <td><%= link_to 'Destroy', faculty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

